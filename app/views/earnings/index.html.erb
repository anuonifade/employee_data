<div class="container">
  <div class="row align-items-center">
    <div class="col">
      <h1>Earnings</h1>
      <%= form_tag("upload/#{@employer.id}", :method => 'post', :enctype => "multipart/form-data") do %>
        <div class="form-group">
          <div class="custom-file">
            <%= file_field_tag("file", :class => "custom-file-input", :id => "earnings") %>
            <label class="custom-file-label" for="file-upload">Upload Earnings</label>
          </div>
        </div>
        <div class="form-group">
          <%= submit_tag("Upload", :class => 'btn btn-success') %>
        </div>
      <% end %>
    </div>
  </div>
  <% if @employer.earnings.count > 0 %>
    <h5><a href='<%= "show/#{@employer.id}" %>'>View Earnings</a></h5>
  <% end %>
</div>
