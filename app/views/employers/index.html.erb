<div class="container">
  <h1>Employers</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Employer name</th>
        <th scope="col">Mapping</th>
      </tr>
    </thead>
    <tbody>
    <% @employers.each_with_index do |employer, index| %>
      <tr>
        <th><%= index + 1 %></th>
        <td><a href='<%= "earnings/#{employer.id}" %>'><%= employer.name %></a></td>
        <td><%= employer.mapping %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>